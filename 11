#include<iostream> 
using namespace std; 
class unary{ 
int x,y; 
public: 
void get(){ 
x=10; 
y=20; 
} 
void show() 
{ 
cout<<"x="<<x<<endl; 
cout<<"y="<<y; 
} 
friend void operator ++(unary &u); 
}; 
void operator ++(unary &u) 
{ 
u.x++; 
u.y++; 
} 
int main() 
{ 
unary u; 
u.get(); 
++u; 
u.show(); 
}
